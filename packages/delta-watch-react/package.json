{
  "name": "delta-watch-react",
  "version": "0.0.3",
  "description": "React bindings for delta-watch library.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "echo `rm -r core index.js index.js.map index.d.ts &>/dev/null`",
    "build": "tsc",
    "build-publish": "npm run clean && npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chadrc/delta-watch.git"
  },
  "keywords": [
    "delta",
    "watch",
    "react",
    "watcher"
  ],
  "author": "Chad Collins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chadrc/delta-watch/issues"
  },
  "homepage": "https://github.com/chadrc/delta-watch#readme",
  "dependencies": {
    "delta-watch": "0.0.8",
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/jest": "^22.2.3",
    "@types/react-test-renderer": "^16.0.1",
    "chai": "^4.1.2",
    "jest": "^22.4.3",
    "react-test-renderer": "^16.3.2",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/__tests__/.*\\.test\\.(ts|tsx|js)$"
  }
}
